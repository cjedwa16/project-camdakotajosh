<form id="update" class="form">
  <h6>Description</h6>
  <textarea name="description" placeholder="Description" rows="3" class="form-control mb-1"><%= icecream.description -%></textarea>
  <h6>Flavors</h6>

    <%_ for (falvor of icecream.flavor) { -%>
      <input type="text" name="flavors" placeholder="<%= falvor -%>" value="<%= falvor -%>" class="form-control form-control-lg font-weight-bold mb-1">
    <%_ } -%>

    <div id="Fillings">
      <h6>Fillings</h6>
      <button id="add_filling" type="button" class="btn btn-primary">Add Filling</button>
        <%_ for (filling of icecream.fillings) { -%>
            <div>
                <input type="text" name="flavors" placeholder="<%= filling -%>" value="<%= filling -%>" class="form-control form-control-lg font-weight-bold mb-1">
                <button type="button" class="delete_filing btn bg-warning mb-3">Delete Filling</button>
            </div>
        <%_ } -%>

   </div>

  <button type="submit" class="btn btn-primary">Save</button>
  <button id="delete" class="btn btn-primary">Delete</button>
</form>
