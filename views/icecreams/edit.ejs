<form id="update" class="form">

  <h4>Description</h4>
    <textarea class="form-control" name="description" placeholder="Description" rows="3" class="form-control mb-1"><%= icecream.description -%></textarea>
  <h4>Image-Path</h4>
    <input class="form-control" type="text" name="image" placeholder="<%= icecream.image -%>" value="<%= icecream.image-%>" class="form-control form-control-lg font-weight-bold mb-1">

  <h4>Flavors</h4>
    <button id="add_flavor" type="button" class="btn btn-primary mb-2">Add Flavor</button>
    <div id="Flavors">
      <%_ for (flavor of icecream.flavors) { -%>
          <div class="input-group mb-3">
            <input readonly class="form-control-plaintext" type="text" name="flavors" value="<%= flavor -%>" class="form-control form-control-lg font-weight-bold mb-1">
            <span class="input-group-btn">
              <button class=" btn btn-warning ml-1">Delete Flavor</button>
            </span>
          </div>
      <%_ } -%>
    </div>


    <h4 class="mt-2 mb-2">Fillings</h4>
      <button id="add_filling" type="button" class="btn btn-primary mb-2">Add Filling</button>
      <div id="Fillings">
          <%_ for (filling of icecream.fillings) { -%>
                <div class="input-group mb-3">
                  <input readonly class="form-control-plaintext" type="text" name="fillings" value="<%= filling -%>" class="form-control form-control-lg font-weight-bold mb-1">
                  <span class="input-group-btn">
                    <button class=" btn btn-warning ml-1">Delete Filling</button>
                  </span>
                </div>


          <%_ } -%>
     </div>

  <button type="submit" class="btn btn-primary">Save</button>
  <button id="delete" class="btn btn-primary">Delete</button>
</form>
