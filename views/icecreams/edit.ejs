<form id="update" class="form  form-control ">

  <h4>Description</h4>
    <textarea name="description" placeholder="Description" rows="3" class="form-control mb-1"><%= icecream.description -%></textarea>
  <h4>Image-Path</h4>
    <input type="text" name="image" placeholder="<%= icecream.image -%>" value="<%= icecream.image-%>" class="form-control form-control-lg font-weight-bold mb-1">

  <h4>Flavors</h4>
    <button id="add_flavor" type="button" class="btn btn-primary mb-2">Add Flavor</button>
    <div id="Flavors">
      <%_ for (flavor of icecream.flavors) { -%>
        <div>
          <input type="text" name="flavors" value="<%= flavor -%>" class="form-control form-control-lg font-weight-bold mb-1">
          <button class="bg-warning mb-3">Delete Flavor</button>
        </div>
      <%_ } -%>
    </div>


    <h4 class="mt-2 mb-2">Fillings</h4>
      <button id="add_filling" type="button" class="btn btn-primary mb-2">Add Filling</button>
      <div id="Fillings">
          <%_ for (filling of icecream.fillings) { -%>
              <div>
                <input type="text" name="fillings" value="<%= filling -%>" class="form-control form-control-lg font-weight-bold mb-1">
                  <button class="bg-warning mb-3">Delete Filling</button>
              </div>
          <%_ } -%>
     </div>

  <button type="submit" class="btn btn-primary">Save</button>
  <button id="delete" class="btn btn-primary">Delete</button>
</form>
