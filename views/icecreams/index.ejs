
<!DOCTYPE html>
<html>
  <%- include('../head'); -%>
  <body>
    <%- include('../navbar', {active: 'icecreams'}); -%>
    <div class="row container-fluid mb-5 ">
        <div class="col-md-4">

          <nav class="nav nav-pills flex-column">
              <%_ for (const icecream of icecreams) { -%>
                <h2 class="font-weight-bold"><%= icecream.name -%></h2>
                <p class="font-weight-normal"><%= icecream.description-%> </p>
                <%_ } -%>

          </nav>
      </div>
    </div>
  </body>
</html>

