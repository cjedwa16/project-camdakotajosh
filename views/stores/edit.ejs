<form id="update" class="form">

  <% var x = 0; %>
  <%_ for (const store of stores) { -%>
    <%_ if (x === 0) { -%>
        <div class="row">
      <%_ } -%>
      <div class="card ml-3 mt-3 mb-3" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= store.id -%></h5>
          <p class="card-text"><%= store.Building_Number-%> <%= store.Street-%>,</p>
          <p class="card-text">  <%= store.City-%>, <%= store.State-%></p>
          <a href="#" class="card-link"><%= store.flavor -%></a>

          <%_ if (store.icecream.length > 0) { -%>
            <p>Flavors In Stock:</p>
            <ul>
              <button  type="button" class="btn btn-primary mt-2 mb-2 add_flavor">Add Flavor</button>
              <%_ for (const flav of store.icecream) { -%>
                <div>
                  <li><a class="card-link" href="/icecreams/<%= flav -%>"><%= flav -%></a></li>
                  <button class="bg-warning mb-3 delete_flav">Delete Flavor</button>
                </div>
              <%_ } -%>
            </ul>
          <%_ } -%>
          <% x++; %>


        </div>
          <button class="bg-warning mb-3 delete_store">Delete Store</button>
  </div>
  <%_ if (x === 4) { -%>
      </div>
      <% var x = 0; %>
      <%_ } -%>
  <%_ } -%>

  <main>
    <div class="card ml-3 mt-3 mb-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><input type="text" name="store_name" placeholder="store_name" value=""></h5>
        <p class="card-text"><input type="text" name="building_number" placeholder="building_number" value=""> <input type="text" name="street" placeholder="street" value="">,</p>
        <p class="card-text">  <input type="text" name="city" placeholder="city" value="">, <input type="text" name="state" placeholder="state" value=""></p>
        <div>
          <ul>
            <button  type="button" class="btn btn-primary mt-2 mb-2 add_flavor">Add Flavor</button>
          </ul>
        </div>
        <% x++; %>

      </div>
    </div>
  </main>
</form>
