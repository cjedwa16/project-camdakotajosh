  <% var x = 0; %>
  <%_ for (const store of stores) { -%>
    <%_ if (x === 0) { -%>
        <div class="row">
      <%_ } -%>
      <form id="<%= store.id -%>" class="currstore">
      <div class="card ml-3 mt-3 mb-3" style="width: 18rem;">
        <div class="card-body">

          <h5 class="card-title">
            <input type="text" name="store_name" placeholder="<%= store.id -%>" value="<%= store.id -%>">
          </h5>

          <p class="card-text">
            <input type="text" name="building_number" placeholder="<%= store.Building_Number-%>" value="<%= store.Building_Number-%>">
            <input type="text" name="street" placeholder="<%= store.Street-%>" value="<%= store.Street-%>">,
          </p>
          <p class="card-text">
             <input type="text" name="city" placeholder=" <%= store.City-%>" value=" <%= store.City-%>">,
             <input type="text" name="state" placeholder="<%= store.State-%>" value="<%= store.State-%>">
          </p>

          <%_ if (store.icecream.length > 0) { -%>
            <p>Flavors In Stock:</p>
            <ul>
              <button  type="button" class="btn btn-primary mt-2 mb-2 add_flavor">Add Flavor</button>
              <%_ for (const flav of store.icecream) { -%>
                <div>
                  <li><a class="card-link" href="/icecreams/<%= flav -%>"><%= flav -%></a></li>
                  <button class="bg-warning mb-3 delete_flav">Delete Flavor</button>
                </div>
              <%_ } -%>
            </ul>
          <%_ } -%>
          <% x++; %>


        </div>
          <button class="bg-warning mb-3 delete_store">Delete Store</button>
          <button class="bg-primary mb-3 update_store">Update Store</button>
  </div>
  </form>
  <%_ if (x === 4) { -%>
      </div>
      <% var x = 0; %>
      <%_ } -%>
  <%_ } -%>

  <form class="new_store">
    <div class="card ml-3 mt-3 mb-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><input type="text" name="_id" placeholder="store_name" value=""></h5>
        <p class="card-text"><input type="text" name="Building_Number" placeholder="building_number" value=""> <input type="text" name="Street" placeholder="street" value="">,</p>
        <p class="card-text">  <input type="text" name="City" placeholder="city" value="">, <input type="text" name="State" placeholder="state" value=""></p>
        <div>
          <ul>
            <button  type="button" class="btn btn-primary mt-2 mb-2 add_flavor">Add Flavor</button>
          </ul>
        </div>
      </div>
      <button  type="sumbit" class="btn btn-primary mt-2 mb-2">Add Store</button>
    </div>
</form>
