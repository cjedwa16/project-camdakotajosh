<form id="update" class="form">
  <div id="stores">
  <% var x = 0; %>
  <%_ for (const store of stores) { -%>
    <%_ if (x === 0) { -%>
        <div class="row">
      <%_ } -%>
      <main>
      <div class="card ml-3 mt-3 mb-3" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= store.id -%></h5>
          <p class="card-text"><%= store.Building_Number-%> <%= store.Street-%>,</p>
          <p class="card-text">  <%= store.City-%>, <%= store.State-%></p>
          <a href="#" class="card-link"><%= store.flavor -%></a>
          <%_ if (store.icecream.length > 0) { -%>
            <p>Flavors In Stock:</p>
            <ul>
            <%_ for (const flav of store.icecream) { -%>
              <li><a class="card-link" href="/icecreams/<%= flav -%>"><%= flav -%></a></li>
              <%_ } -%>
            </ul>
            <%_ } -%>
          <button class="bg-warning mb-3">Delete Store</button>
          <% x++; %>

        </div>
    </div>

  </main>
  <%_ if (x === 4) { -%>
      </div>
      <% var x = 0; %>
      <%_ } -%>
  <%_ } -%>
  </div>
  <main>
    <div class="card ml-3 mt-3 mb-3" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><input type="text" name="store_name" placeholder="" value=""></h5>
        <p class="card-text"><input type="text" name="building_number" placeholder="" value=""> <input type="text" name="street" placeholder="" value="">,</p>
        <p class="card-text">  <input type="text" name="city" placeholder="" value="">, <input type="text" name="state" placeholder="" value=""></p>
        <a href="#" class="card-link"><input type="text" name="flavor" placeholder="" value=""></a>
        <div>
          <button  type="button" class="btn btn-primary mb-2 add_flavor">Add Flavor</button>
        </div>
        <button class="bg-warning mb-3">Delete Store</button>
        <% x++; %>

      </div>
    </div>
  </main>
</form>
